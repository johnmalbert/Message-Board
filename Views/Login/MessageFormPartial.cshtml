@model Message

<div class="container border p-4 mb-5">
    <form asp-action="PostMessage" method="post">
        <div class='form-group'>
            <h4>Post a message!</h4>
            <input class="form-control" asp-for="MessageBody" placeholder= "Type Message Here.">
            <span asp-validation-for="MessageBody" class="text-danger"></span>
        </div> 
        <div class='form-group'>
            <h4>Add an Image URL (Optional)</h4>
            <input class="form-control" asp-for="ImgUrl" placeholder= "Enter an Image Url">
            <span asp-validation-for="ImgUrl" class="text-danger"></span>
        </div> 
        <button type="submit" class="btn btn-primary">Post!</button>
    </form>
</div>
